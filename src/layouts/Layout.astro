---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="hi">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="The Beginning of Infinity, by David Deutsch, translated to Hindi"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href={`${import.meta.env.BASE_URL}/favicon.png`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-classic-cream text-classic-charcoal">
    <!-- Mobile menu button -->
    <button id="menu-btn" class="md:hidden fixed top-4 right-4 z-20 p-3 rounded-lg bg-white/90 text-classic-navy hover:text-classic-navy-light focus:outline-none focus:text-classic-navy-light shadow-lg border border-classic-gold/20">
      <svg class="h-6 w-6" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor">
        <path d="M4 6h16M4 12h16m-7 6h7"></path>
      </svg>
    </button>

    <div class="relative min-h-screen md:flex">
      <!-- Sidebar -->
      <aside
        id="sidebar"
        class="transform -translate-x-full md:translate-x-0 transition-transform duration-300 ease-in-out bg-white/95 backdrop-blur-sm p-8 fixed md:sticky md:top-0 md:w-80 h-screen overflow-y-auto z-10 border-r border-classic-gold/20 shadow-xl"
      >
        <!-- Sidebar content will go here -->
        <slot name="sidebar" />
      </aside>

      <!-- Main content -->
      <main class="w-full md:flex-1 p-8 md:p-16 md:px-24 lg:px-48 bg-classic-cream">
        <div class="max-w-4xl mx-auto">
          <slot />
        </div>
      </main>
    </div>

    <script>
      const menuBtn = document.getElementById('menu-btn');
      const sidebar = document.getElementById('sidebar');

      if (menuBtn && sidebar) {
        menuBtn.addEventListener('click', () => {
          sidebar.classList.toggle('-translate-x-full');
        });

        // Optional: Close sidebar when clicking outside of it on mobile
        document.addEventListener('click', (event) => {
          const isClickInsideSidebar = sidebar.contains(event.target as Node);
          const isClickOnMenuBtn = menuBtn.contains(event.target as Node);

          if (!isClickInsideSidebar && !isClickOnMenuBtn && !sidebar.classList.contains('-translate-x-full')) {
              sidebar.classList.add('-translate-x-full');
          }
        });
      }
    </script>
  </body>
</html>

